@using DevExpress.Web.Mvc.UI
@model System.Data.DataTable
@{
    ViewBag.Title = "How to display a Model in the TreeView extension";
}
<h2>@ViewBag.Message</h2>
<p>
    To learn more about DevExpress Extensions for ASP.NET MVC visit <a href="http://devexpress.com/Products/NET/Controls/ASP-NET-MVC/"
        title="ASP.NET MVC Website">http://devexpress.com/Products/NET/Controls/ASP-NET-MVC/</a>.
    @Html.DevExpress().TreeView(settings => {
    settings.Name = "treeView";

    Example.Controllers.HomeController.CreateTreeViewNodesRecursive(Model, settings.Nodes, 0);
}).GetHtml()
</p>
